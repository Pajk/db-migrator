#!/usr/bin/env node

"use strict";

var status = require("../lib/status");
var config = require("./env").getConfig();

status({
    connectionString: config.connectionString,
    path: config.scriptsPath,
    tableName: config.tableName,
    dbDriver: config.dbDriver
}).then(function() {
    process.exit(0);
}).catch(function() {
    process.exit(1);
});
